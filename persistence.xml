<?xml version="1.0" encoding="UTF-8"?>

<persistence 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">

  <persistence-unit name="P">
	  
	  <class>paquete.Cliente</class>
	  <class>paquete.Especialidad</class>
	  <class>paquete.Incidente</class>
	  <class>paquete.Informe</class>
	  <class>paquete.MedioNotificacionTecnico</class>
	  <class>paquete.NotificacionTecnico</class>
	  <class>paquete.Operador</class>
	  <class>paquete.ProblemaEspecialidad</class>
	  <class>paquete.ReporteDiario</class>
	  <class>paquete.Servicio</class>
	  <class>paquete.Tecnico</class>
	  <class>paquete.TecnicoEspecialidad</class>
	  <class>pquete.TiempoResolucionOperador</class>
	  
    <properties>
        <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
        <property name="javax.persistence.jdbc.url" value="jdbc:h2:mem:test" />
        <property name="javax.persistence.jdbc.user" value="" />
        <property name="javax.persistence.jdbc.password" value="" />
        <property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect" />
        <property name="hibernate.hbm2ddl.auto" value="create-drop" />
    </properties>
  </persistence-unit>

</persistence>